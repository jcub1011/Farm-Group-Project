<UserControl x:Class="Farm_Group_Project.VisualizationItems.VisualObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farm_Group_Project.VisualizationItems"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalContentAlignment="Stretch">
    <Border BorderThickness="3" Background="White" BorderBrush="Black" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid Background="Gray" x:Name="MainContainer" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Test" Grid.Row="0" FontWeight="Bold" Padding="5" x:Name="DisplayText"/>
            <Grid Background="White" x:Name="ContentHolder" Grid.Row="1"/>
        </Grid>
    </Border>
</UserControl>
