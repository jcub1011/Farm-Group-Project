<UserControl x:Class="Farm_Group_Project.VisualizationItems.Building"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farm_Group_Project.VisualizationItems"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.Resources>
        <local:BuildingEntity x:Key="data"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{StaticResource data}"/>
    </UserControl.DataContext>
    
    <Grid Background="White" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Name}" Grid.Row="0" FontSize="15" TextAlignment="Center"/>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="3">
            <Canvas HorizontalAlignment="Stretch" x:Name="Content">
            </Canvas>
        </Border>
    </Grid>
</UserControl>
