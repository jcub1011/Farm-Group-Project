<UserControl x:Class="Farm_Group_Project.VisualizationItems.Building"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farm_Group_Project.VisualizationItems"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.Resources>
        <local:Building x:Key="data"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Source="{StaticResource data}"/>
    </UserControl.DataContext>

    <Canvas Background="White" HorizontalAlignment="Stretch" x:Name="MainContainer">
        <TextBlock Text="{Binding Name}" Grid.Row="0" FontSize="15" TextAlignment="Center" Canvas.Top="0" Height="20" Width="500"/>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="3" Canvas.Top="20">
            <Canvas HorizontalAlignment="Stretch" x:Name="Content"/>
        </Border>
    </Canvas>
</UserControl>
