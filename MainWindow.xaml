<Window x:Class="Farm_Group_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Farm_Group_Project"
        xmlns:inv="clr-namespace:Farm_Group_Project.InventorySystem"
        xmlns:vis="clr-namespace:Farm_Group_Project.VisualizationItems"
        xmlns:dro="clr-namespace:Farm_Group_Project.DroneInterface"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <inv:InventoryView Grid.Row="0" Grid.Column="0" x:Name="Inventory"/>
        <vis:FarmVisualizer Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" x:Name="Visualizer"/>
        <dro:DroneCommandButtons Grid.Row="2" Grid.Column="0" x:Name="DroneButtons" Padding="10"/>
    </Grid>
</Window>
