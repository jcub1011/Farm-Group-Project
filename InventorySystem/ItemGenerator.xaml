<UserControl x:Class="Farm_Group_Project.InventorySystem.ItemGenerator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farm_Group_Project.InventorySystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White">
        <TextBlock Grid.Row="0" FontWeight="Bold" Padding="2">- Item Generator -</TextBlock>
        <local:PropertyView Grid.Row="1" x:Name="ItemPropertyViewer"/>
        <StackPanel Orientation="Horizontal">
            <Button Click="OnAddChild" x:Name="AddChildButton">Add Child Item</Button>
            <Button Click="OnAddRoot">Add Root Item</Button>
        </StackPanel>
    </StackPanel>
</UserControl>
